<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:paddingRight="80dip"
    android:paddingLeft="8dip"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">

    <RelativeLayout
        android:id="@+id/main_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_activity_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_centerVertical="true"
            android:src="@drawable/clothing_05"
            android:scaleType="fitXY"
            />
        <View
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"
            android:background="@drawable/comment_circle"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/chatlist_image_other"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginRight="5dip"
        android:layout_alignParentLeft="true"
        android:text="ä»–"></TextView>

    <TextView
        android:id="@+id/chatlist_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chatlist_image_other"
        android:layout_alignTop="@id/chatlist_image_other"
        android:text="hewdfb"

        android:paddingTop="13dip"
        android:paddingBottom="18dip"      />
    </RelativeLayout>